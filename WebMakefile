
LRL_WEB_BINDEST ?= $(HOME)/public_html/cgi-bin/

COMMANDS  =  \
	CheckInput \
	CmdCmplx \
	CmdDelone \
	CmdDists \
	CmdGen \
	CmdLM \
	CmdNiggli \
	CmdPath \
	CmdPerturb \
	CmdS6Refl \
	CmdScale \
	CmdSella  \
	CmdToB4 \
	CmdToC3 \
	CmdToCell \
	CmdToD13 \
	CmdToDC \
	CmdToG6 \
	CmdToS6 \
	CmdToS6L \
	CmdToU \
	CmdToV7 \
	CmdVolume \
	PlotC3 \
	Dirichlet

SOURCES  =  \
	CheckInput/CheckInput.cpp \
        CmdCmplx/CmdCmplx.cpp \
	CmdDelone/CmdDelone.cpp \
	CmdDists/CmdDists.cpp \
	CmdGen/CmdGen.cpp \
	CmdLM/CmdLM.cpp \
	CmdNiggli/CmdNiggli.cpp \
	CmdPath/CmdPath.cpp \
	CmdPerturb/CmdPerturb.cpp \
	CmdS6Refl/CmdS6Refl.cpp \
	CmdScale/CmdScale.cpp \
	CmdSella/CmdSella.cpp  \
	CmdToB4/CmdToB4.cpp \
	CmdToC3/CmdToC3.cpp \
	CmdToCell/CmdToCell.cpp \
	CmdToD13/CmdToD13.cpp \
	CmdToDC/CmdToDC.cpp \
	CmdToG6/CmdToG6.cpp \
	CmdToV7/CmdToV7.cpp \
	CmdToS6/CmdToS6.cpp \
	CmdToS6L/CmdToS6L.cpp \
	CmdToU/CmdToU.cpp \
	CmdToV7/CmdToV7.cpp \
	CmdVolume/CmdVolume.cpp \
	PlotC3/MAIN_PlotC3.cpp \
